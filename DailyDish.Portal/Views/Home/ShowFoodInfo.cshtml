@model DailyDish.Portal.Models.DishesModel
<div class="foodCantainer">
    <div class="foodTitle">
        <p>今日推荐：@Model.DishName</p>
    </div>
    <div class="img">
        <img src="@Model.DishImage" />
    </div>

    <div class="foodContent">
        <div class="instructions">
            @Model.Explain
        </div>
    </div>
    <div class="buttonBox buttonBox1">
        <hr />
        <button type="button" class="btn dislikeDishBtn" onclick="NavToWeb()">就吃它了</button>
        <button type="button" class="btn" style="background-color:#FF8C00" onclick="ChangeRecommandedDish()">不想吃它</button>
    </div>
</div>

<script>
    function NavToWeb() {
        location.href = '@Model.PracticeUrl';
    }

    function ChangeRecommandedDish() {
        $.ajax({
            url: '/Home/GetRecommendDish',
            type: 'POST',
            dataType: 'application/json',
            data: {
                openId: null,
            },
        })
    }
</script>